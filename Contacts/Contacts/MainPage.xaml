<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.MainPage">

    <Grid>
        <Entry Placeholder="Пошук"
               WidthRequest="70" HeightRequest="25"
               VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Button Text="Додати" 
                WidthRequest="70" HeightRequest="25"
                />
        <ListView
            Margin="0,30,0,0"
                HasUnevenRows="True"
                ItemsSource="{Binding _people}"
                x:Name="personsListView"
            ItemSelected="personsListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Padding="15" Text="{Binding Name}" FontSize="Large" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>
